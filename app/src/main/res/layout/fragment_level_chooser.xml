<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/level_chooser_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.LevelChooserFragment">

        <LinearLayout
            android:id="@+id/parent_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/start_small_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Small"
                style="@style/AppTheme.ButtonSecondary"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/start_big_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Big"
                style="@style/AppTheme.ButtonSecondary"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/continue_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Continue"
                android:visibility="invisible"
                style="@style/AppTheme.ButtonPrimary"/>
        </LinearLayout>
    </FrameLayout>
</layout>