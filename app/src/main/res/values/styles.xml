<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">#0d47a1</item>
        <item name="colorPrimaryVariant">#5472d3</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#00838f</item>
        <item name="colorSecondaryVariant">#4fb3bf</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#121212</item>
        <item name="colorOnSurface">#fafafa</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">#212121</item>
        <item name="fontFamily">@font/roboto_mono</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
    </style>

    <style name="AppTheme.ButtonSecondary">
        <item name="backgroundTint">#FAFAFA</item>
        <item name="android:textColor">#0d47a1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.ButtonPrimary">
        <item name="backgroundTint">#0d47a1</item>
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:textStyle">bold</item>
    </style>

    <color name="background">#FAFAFA</color>

    <style name="play_field_table_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="play_field_table_row_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="field_unpainted">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">#ffffff</item>
        <item name="android:strokeColor">#000000</item>
        <item name="cornerFamily">cut</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <style name="field_painted">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:colorBackground">#000000</item>
        <item name="android:strokeColor">#000000</item>
        <item name="cornerFamily">cut</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <style name="row_values_table_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="row_values_table_row_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="row_value_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="column_values_table_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="column_values_table_row_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="column_value_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="help_button_style">
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">#1C7FCD</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconSize">55dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:padding">0dp</item>
        <item name="icon">@drawable/lightbulb_24</item>
        <item name="iconTint">@color/white</item>
        <item name="cornerRadius">3dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:backgroundTint">#2196F3</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
    </style>

    <style name="color_switch_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checked">true</item>
        <item name="android:scaleX">2.5</item>
        <item name="android:scaleY">2.5</item>
        <item name="android:theme">@style/tile_switch_thumb_style</item>
        <item name="track">@drawable/switch_track</item>
        <item name="android:thumb">@drawable/color_switch_thumb_24</item>
    </style>

    <style name="tile_switch_thumb_style">
        <item name="colorSurface">#888888</item>
        <item name="colorControlActivated">@color/black</item>
    </style>
</resources>