<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="field_unpainted" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/field_unpainted_outline</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHighlight">#5C5C5C</item>
        <item name="android:textColorLink">#454545</item>
        <item name="android:textStyle">bold</item>
        <item name="shapeAppearanceOverlay">@style/cornersShapeAppearance</item>
    </style>

    <style name="field_painted" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/field_painted_outline</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHighlight">#5C5C5C</item>
        <item name="android:textColorLink">#454545</item>
        <item name="android:textStyle">bold</item>
        <item name="shapeAppearanceOverlay">@style/cornersShapeAppearance</item>
    </style>

    <style name="cornersShapeAppearance">
        <item name="cornerFamily">cut</item>
    </style>
</resources>